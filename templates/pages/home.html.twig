{% extends './base.html.twig' %}

{% block title %}Blog home{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4">Blog posts</h1>

        <form action="{{ path('app_home') }}">
            <div class="input-group mb-4">
                <input type="text" name="q" value="{{ searchTerm }}" class="form-control" placeholder="Search posts..." aria-label="Search term" aria-describedby="button-search">
                <button class="btn btn-primary" type="submit" id="button-search">Search</button>
            </div>
        </form>

        <div class="row align-content-stretch">
            {% for post in pagination %}
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <img src="{{ post.imageUrl }}" class="card-img-top post-card-image" alt="{{ post.translations[0].title }}">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <a href="{{ path('app_post_show', {id: post.id}) }}" class="text-decoration-none">
                                    <h5 class="card-title text-truncate">{{ post.translations[0].title }}</h5>
                                </a>
                                <p class="card-text line-clamp-2 mb-2">
                                    {{ post.translations[0].content|striptags|slice(0, 200) }}
                                </p>
                                <div class="d-flex align-items-center gap-2 mb-2">
                                    {% for tag in post.tags %}
                                        <span class="badge bg-primary">
                                            {{ tag.translations[0].name }}
                                        </span>
                                    {% endfor %}
                                </div>
                            </div>
                            <a href="{{ path('app_post_show', {id: post.id}) }}">Read more</a>
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between gap-4">
                            <small class="text-muted">Published on {{ post.createdAt|date('Y-m-d') }}</small>
                            <small class="text-muted">Author: {{ post.author.name }}</small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="navigation d-flex justify-content-end">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
