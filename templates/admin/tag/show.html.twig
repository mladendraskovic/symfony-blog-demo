{% extends 'base.html.twig' %}

{% block title %}Tag details{% endblock %}

{% block body %}
    <h1>Tag</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ tag.id }}</td>
        </tr>
        <tr>
            <th>Name EN</th>
            <td>{{ tag.name_en }}</td>
        </tr>
        <tr>
            <th>Name HR</th>
            <td>{{ tag.name_hr }}</td>
        </tr>
        <tr>
            <th>Created By</th>
            <td>{{ tag.user }}</td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>{{ tag.created_at }}</td>
        </tr>
        <tr>
            <th>Updated At</th>
            <td>{{ tag.updated_at }}</td>
        </tr>
        </tbody>
    </table>

    <div class="d-flex gap-2">
        <a href="{{ path('app_tag_index') }}" class="btn btn-secondary">Back to list</a>

        <a href="{{ path('app_tag_edit', {'id': tag.id}) }}" class="btn btn-warning">Edit</a>

        {{ include('admin/tag/_delete_form.html.twig') }}
    </div>
{% endblock %}
